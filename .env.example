# .env.example - Copy to .env and customize
# ==============================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
APP_NAME="Sock Shop Test Automation"

# Application URLs
SOCK_SHOP_BASE_URL=http://localhost:8080
API_BASE_URL=http://localhost:8080/api

# Browser Configuration
BROWSER_NAME=chromium
BROWSER_HEADLESS=true
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080
BROWSER_TIMEOUT=30000
BROWSER_SLOW_MO=0
MAX_CONCURRENT_BROWSERS=5

# Browser Arguments (comma-separated)
BROWSER_ARGS="--no-sandbox,--disable-dev-shm-usage,--disable-gpu"

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=logs/automation.log
LOG_FORMAT=structured
LOG_MAX_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Test Configuration
TEST_PARALLEL_WORKERS=4
TEST_CLEANUP_DATA=true
TEST_GENERATE_REPORT=true
TEST_REPORT_FORMATS="html,allure"

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLDS_PAGE_LOAD=5000
PERFORMANCE_THRESHOLDS_API_RESPONSE=2000

# Feature Flags
ENABLE_VISUAL_TESTING=false
ENABLE_ACCESSIBILITY_TESTING=false
ENABLE_API_CONTRACT_TESTING=true
ENABLE_SCREENSHOT_ON_FAILURE=true
ENABLE_VIDEO_RECORDING=false

# Database Configuration (for test data)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sockshop_test
DATABASE_USERNAME=testuser
# DATABASE_PASSWORD should be in .env.local or environment variables

# API Testing
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RETRY_DELAY=1.0
VALIDATE_SSL_CERTIFICATES=true

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_STRATEGY=exponential_jitter

# Monitoring & Alerting
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300
ALERT_ON_FAILURE=false
# ALERT_WEBHOOK_URL should be in environment variables

# Localization
DEFAULT_LOCALE=en-US
DEFAULT_TIMEZONE=UTC

# Mobile Testing
ENABLE_MOBILE_TESTING=false
MOBILE_DEVICE_NAME=iPhone 12
MOBILE_VIEWPORT_WIDTH=375
MOBILE_VIEWPORT_HEIGHT=812